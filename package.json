{
  "name": "vite-mpa-starter",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint --ext .js --fix src/scripts",
    "format": "prettier --check --write src"
  },
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/container-queries": "^0.1.0",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/typography": "^0.5.8",
    "autoprefixer": "^10.4.13",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "fast-glob": "^3.2.12",
    "postcss": "^8.4.19",
    "postcss-custom-media": "^9.0.1",
    "postcss-custom-selectors": "^7.0.0",
    "postcss-import": "^15.0.0",
    "postcss-nesting": "^10.2.0",
    "prettier": "^2.8.1",
    "tailwindcss": "^3.3.3",
    "terser": "^5.15.1",
    "vite": "^3.2.3",
    "vite-plugin-handlebars": "^1.6.0"
  },
  "dependencies": {
    "@alpinejs/mask": "^3.10.5",
    "alpinejs": "^3.10.5"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:import/recommended",
      "eslint-config-prettier"
    ],
    "rules": {
      "no-console": "warn"
    }
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "none",
    "printWidth": 100,
    "htmlWhitespaceSensitivity": "css",
    "endOfLine": "lf"
  }
